@{
    Layout = "_Layout";
    ViewData["Title"] = "CreateStudent";
}

<form asp-controller="Home" asp-action="DisplayStudent" method="post">
    <table>
        <tr>
            <td>First Name</td>
            <td><input type="text" name="firstName" /></td>
        </tr>
        <tr>
            <td>Last Name</td>
            <td><input type="text" name="lastName" /></td>
        </tr>
        <tr>
            <td>Student Id</td>
            <td><input type="number" name="studentId" /></td>
        </tr>
        <tr>
            <td>Email Address</td>
            <td><input type="email" name="emailAddress" /></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input type="password" name="password" /></td>
        </tr>
        <tr>
            <td>Description of Student</td>
            <td><input type="text" name="studentDescription" /></td>
        </tr>
        <tr>
            <td><input type="submit" value="Submit" /></td>
        </tr>
    </table>
</form>